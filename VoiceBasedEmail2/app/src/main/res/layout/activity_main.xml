<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#EFFAFF"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topView"
        android:layout_width="18dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="#EFFAFF" />

    <View
        android:visibility="invisible"
        android:id="@+id/topView1"
        android:layout_width="18dp"
        android:layout_toStartOf="@id/topView"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="#000003" />

    <View
        android:visibility="invisible"
        android:id="@+id/topView2"
        android:layout_toStartOf="@id/topView1"
        android:layout_width="18dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        android:background="#ED3F33" />

    <View
        android:visibility="invisible"
        android:id="@+id/topView3"
        android:layout_toStartOf="@id/topView2"
        android:layout_width="18dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:background="#1E436C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="500dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:src="@drawable/light"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/welcometo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:shadowColor="#EFFAFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="15"
            android:text="Welcome To"
            android:textColor="#000003"
            android:textSize="40dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/voicebased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:shadowColor="#E9ECED"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="15"
            android:text="Voice Based E-Mail"
            android:textColor="#ED3F33"
            android:textSize="40dp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/buttomView"
        android:layout_width="18dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:background="#EFFAFF" />

    <View
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttomView1"
        android:layout_width="18dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:background="#000003" />

    <View
        android:visibility="invisible"
        android:id="@+id/buttomView2"
        android:layout_toEndOf="@id/buttomView1"
        android:layout_width="18dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:background="#ED3F33" />

    <View
        android:visibility="invisible"
        android:id="@+id/buttomView3"
        android:layout_toEndOf="@id/buttomView2"
        android:layout_width="18dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:background="#1E436C" />

</RelativeLayout>