<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFFAFF"
    tools:context=".Asend">

    <TextView
        android:id="@+id/Arecivetextv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="ارسال بريد "

        android:textColor="#FF5144"

        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/emailrecieve"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_margin="5dp"

        android:gravity="right|center_vertical"

        android:background="@drawable/seeeeeeeeeeeebtn"
        android:drawablePadding="1dp"
        android:hint=" البريد الالكتروني "
        android:paddingRight="30dp"
        android:textColor="#FFFFFF"

        android:textColorHint="#FF5144"

        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Arecivetextv"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/subjectrecive"
        android:layout_width="0dp"
        android:layout_height="62dp"

        android:gravity="right|center_vertical"

        android:layout_margin="5dp"
        android:background="@drawable/seeeeeeeeeeeebtn"
        android:drawablePadding="1dp"
        android:hint=" الموضوع "
        android:paddingRight="30dp"

        android:textColor="#FFFFFF"

        android:textColorHint="#FF5144"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailrecieve"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/messagerecive"
        android:layout_width="0dp"
        android:layout_height="350dp"


        android:layout_margin="5dp"
        android:background="@drawable/seeeeeeeeeeeebtn"
        android:drawablePadding="1dp"
        android:gravity="start|center_horizontal"

        android:hint=" الرسالة "

        android:paddingRight="30dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FF5144"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectrecive"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/seeeeeeeeeeeebtn"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text=" ارسال "

        android:textColor="#FF5144"

        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messagerecive"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>